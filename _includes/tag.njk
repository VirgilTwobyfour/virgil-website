---
layout: base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slug }}/"
---

<h1>Posts tagged "{{ tag }}"</h1>

<ul>
  {% set found = false %}
  {% for post in collections.posts %}
    {% if post.data.tags and tag in post.data.tags %}
      {% set found = true %}
      <li><a href="{{ post.url }}">{{ post.data.title }}</a> â€” {{ post.date | readableDate }}</li>
    {% endif %}
  {% endfor %}
  {% if not found %}
    <li>No posts found for this tag.</li>
  {% endif %}
</ul>

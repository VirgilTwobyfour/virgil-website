---
pagination:
  data: collections.categoryList
  size: 1
  alias: category
permalink: "/categories/{{ category | slug }}/index.html"
eleventyExcludeFromCollections: true
---

{% set posts = collections.postsByCategory[category] or [] %}

{% extends "base.njk" %}

{% block content %}
  <h1>Posts in category "{{ category }}"</h1>

  {% if posts.length == 0 %}
    <p>No posts found for this category.</p>
  {% else %}
    <ul>
      {% for post in posts %}
        <li>
          <a href="{{ post.url }}">{{ post.data.title }}</a>  
          <small>{{ post.date | readableDate }}</small>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  <p><a href="/categories/">Back to all categories</a></p>
{% endblock %}

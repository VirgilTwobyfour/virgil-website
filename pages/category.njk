---
pagination:
  data: collections.categoryList
  size: 1
  alias: categoryObj
permalink: "/categories/{{ categoryObj.slug }}/index.html"
---


{% extends "base.njk" %}

{% block content %}
  <h1>Posts in category "{{ categoryObj.name }}"</h1>

  {% set postsForCategory = collections.postsByCategory[categoryObj.name] or [] %}

  {% if postsForCategory.length == 0 %}
    <p>No posts found in this category.</p>
  {% else %}
    <ul>
      {% for post in postsForCategory %}
        <li><a href="{{ post.url }}">{{ post.data.title }}</a> - <small>{{ post.date | readableDate }}</small></li>
      {% endfor %}
    </ul>
  {% endif %}

  <p><a href="/categories/">Back to all categories</a></p>
{% endblock %}


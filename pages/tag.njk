---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slug }}/index.html"
eleventyExcludeFromCollections: true
---

{% set posts = collections.postsByTag[tag] or [] %}

{% extends "base.njk" %}

{% block content %}
  <h1>Posts tagged "{{ tag }}"</h1>

  {% if posts.length == 0 %}
    <p>No posts found for this tag.</p>
  {% else %}
    <ul>
      {% for post in posts %}
        <li>
          <a href="{{ post.url }}">{{ post.data.title }}</a>  
          <small>{{ post.date | readableDate }}</small>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  <p><a href="/tags/">Back to all tags</a></p>
{% endblock %}
